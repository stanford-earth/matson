<div class="content-type-person">
  <div class="content-type-person_profile">
    <div class="content-type__media">
      <figure>{{ featured_image }}</figure>
    </div>

    <div class="content-type__header">
      <div class="page-title"><h1>{{ first_name }} {{ last_name }}</h1></div>
      <div class="page-subtitle">
        <h2>
          {{ sub_title }}
        </h2>
      </div>

      <dl class="definition-list">
        {% if email is not empty %}
        <dt>{{ "Email"|t }}:</dt>
        <dd>
          {{ email }}
        </dd>
        {% endif %}
        {% if phone is not empty %}
        <dt>{{ "Phone"|t }}:</dt>
        <dd>
          {{ phone }}
        </dd>
        {% endif %}
        {% if office is not empty %}
        <dt>{{ "Office"|t }}:</dt>
        <dd>
          {{ office }}
        </dd>
        {% endif %}
        {% if links is not empty %}
        <dt>{{ "Links"|t }}:</dt>
        <dd>
          {{ links }}
        {% endif %}
        </dd>
      </dl>
    </div>
  </div>

  <div class="content-type-person_bio">
    <h3 class="dash-header">{{ "Biography"|t }}</h3>
    {{ bio }}
  </div>
</div>
