{# left aligned #}
<div class="content-type__media-container right-align-media">
  <div class="content-type__media">
    <figure>{{ featured_image }}</figure>
  </div>

  <div class="content-type__header">
    <div class="page-title"><h1>{{ title }}</h1></div>
    {% if sub_title is not empty %}
    <div class="page-subtitle">
      <h2>
        {{ sub_title }}
      </h2>
    </div>
    {% endif %}
    <div class="content-type-date">
      <span>{{ 'Published'|t }}</span>
      <time>{{ created }}</time>
      <div class="content-type-date__actions social-actions">
        <div class="tweet-popup sharrre" data-title="<i class='fa fa-twitter' aria-hidden='true'></i>" data-text="{{ node_title|render|striptags|trim }}" data-url="{{ url("<current>") }}">
          <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="tweet-popup">
            <svg class="i-svg" role="img">
              <title>{{ 'twitter'|t }}</title>
              <use xlink:href="#i-twitter" xmlns:xlink="http://www.w3.org/1999/xlink"></use>
            </svg>
          </a>
        </div>
        <div class="facebook-popup sharrre" data-title="<i class='fa fa-facebook' aria-hidden='true'></i>" data-text="{{ node_title|render|striptags|trim }}" data-url="{{ url("<current>") }}">
          <a href="https://www.facebook.com/sharer/sharer.php?u={{ url('<current>') }}" class="facebook-popup">
            <svg class="i-svg" role="img">
              <title>{{ 'facebook'|t }}</title>
              <use xlink:href="#i-fb" xmlns:xlink="http://www.w3.org/1999/xlink"></use>
            </svg>
          </a>
        </div>
        <div class="linkedin-popup sharrre" data-title="<i class='fa fa-linkedin' aria-hidden='true'></i>" data-text="{{ node_title|render|striptags|trim }}" data-url="{{ url("<current>") }}">
          <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ url('<current>') }}&title={{ node_title|render|striptags|trim|url_encode }}&source=LinkedIn" class="linkedin-popup">
            <svg class="i-svg" role="img">
              <title>{{ 'linkedin'|t }}</title>
              <use xlink:href="#i-linkedin" xmlns:xlink="http://www.w3.org/1999/xlink"></use>
            </svg>
          </a>
        </div>
        <div class="email-popup">
          <a href="mailto:?subject={{ 'I wanted you to see this news article'|t }}&amp;body={{ 'Read more about:'|t }} at {{ node_title|render|striptags|trim }} {{ url("<current>") }}" title="{{ 'Share by Email'|t }}">
            <svg class="i-svg" role="img">
              <title>{{ 'mail'|t }}</title>
              <use xlink:href="#i-mail" xmlns:xlink="http://www.w3.org/1999/xlink"></use>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>

</div>

<div class="block-matson-content">

  {% if description|render|striptags|trim is not empty %}
  <div class="content-description lead-text">
    {{ description }}
  </div>
  {% endif %}

  <dl class="definition-list">
    {% if when|render|striptags|trim is not empty %}
    <dt>{{ 'When'|t }}:</dt>
    <dd>
      {{ when }}
    </dd>
    {% endif %}
    {% if where|render|striptags|trim is not empty %}
    <dt>{{ 'Where'|t }}:</dt>
    <dd>
      {{ where }}
    </dd>
    {% endif %}
    {% if tags|render|striptags|trim is not empty %}
    <dt>{{ 'Tags'|t }}:</dt>
    <dd>
    {% if tags is iterable %}
    {% set rendered_tags = "" %}
      {% for field in tags %}
        {% for key, item in field if key|first != '#' %}
          {% set rendered_tags = rendered_tags ~ "#{item|render}, "  %}
        {% endfor %}
      {% endfor %}
      {{ rendered_tags|trim|slice(0, -1)|raw }}
    {% else %}
      {{ tags }}
    {% endif %}
    </dd>
    {% endif %}
    {% if audience|render|striptags|trim is not empty %}
    <dt>{{ 'Audience'|t }}:</dt>
    <dd>
      {{ audience }}
    </dd>
    {% endif %}
    {% if more_info|render|striptags|trim is not empty %}
    <dt>{{ 'More Info'|t }}:</dt>
    <dd>
      {{ more_info }}
    </dd>
    {% endif %}
  </dl>

  {{ content }}

  <div class="content-type__timestamp">{{ 'Last updated'|t }}: {{ updated }}</div>
</div>
