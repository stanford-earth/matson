{#
/**
 * @file
 * Simple blocks pattern.
 */
#}
{% set attributes = attributes.addClass(['masonry-blocks', 'js-masonry', variants.retain_order]) %}
<div{{ attributes }}>
  {# Break up the individual items in to the appropriate template var. At least one narrow card needs to have is_column_width set to true #}
  {% for card in cards %}
    {# Pass vars through to include template. #}

    {% if card.title %}
      {% set card = card|merge({'context': context}) %}
      {{ pattern('masonry_block', card) }}
    {% else %}
      {{ card }}
    {% endif %}
  {% endfor %}
</div>
